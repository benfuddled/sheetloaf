{
	"name": "sheetloaf",
	"version": "1.0.0-0",
	"description": "freshmade stylesheets for the whole family.",
	"main": "./dist/index.js",
	"bin": {
		"sheetloaf": "./dist/index.js"
	},
	"scripts": {
		"build": "esbuild src/*.ts --outdir=dist --bundle --platform=node --target=node10.4 --watch --sourcemap=inline",
		"test": "node . \"test/samples/styles/**/*.scss\" --dir \"test/samples/render/\" --load-path \"test/samples/lib\" --style expanded --base test/samples/styles/ --poll 500 --config test/samples/ --watch",
		"test2": "cat package.json | node .",
		"test3": "mocha"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cheddarbread/sheetloaf.git"
	},
	"files": [
		"index.js",
		"parser.js"
	],
	"keywords": [
		"scss",
		"css",
		"sass",
		"processor"
	],
	"author": "Benjamin Richardson",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cheddarbread/sheetloaf/issues"
	},
	"homepage": "https://github.com/cheddarbread/sheetloaf#readme",
	"devDependencies": {
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.11.9",
		"autoprefixer": "^10.4.0",
		"esbuild": "^0.13.15",
		"mocha": "^9.1.3",
		"postcss": "^8.3.11",
		"postcss-custom-properties": "^12.0.0",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.2"
	},
	"peerDependencies": {
		"postcss": "^8.2.0"
	},
	"dependencies": {
		"chokidar": "^3.5.2",
		"commander": "^8.1.0",
		"fast-glob": "^3.2.7",
		"picocolors": "^1.0.0",
		"picomatch": "^2.3.0",
		"sass": "^1.43.4"
	}
}
